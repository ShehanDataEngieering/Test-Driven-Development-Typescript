    "@types/express": "^5.0.3",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.2.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
